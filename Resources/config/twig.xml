<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.extension.sonatra_mailer.templater.class">Sonatra\Bundle\MailerBundle\Twig\Extension\TemplaterExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.sonatra_mailer.templater" class="%twig.extension.sonatra_mailer.templater.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="sonatra_mailer.mail_templater" />
            <argument type="service" id="sonatra_mailer.loader.layout_chain" />
            <argument type="service" id="translator" />
        </service>
    </services>
</container>
