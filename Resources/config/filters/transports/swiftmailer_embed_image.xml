    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.filter.transport.swiftmailer_embed_image.class">Sonatra\Bundle\MailerBundle\Filter\Transport\SwiftMailerEmbedImageFilter</parameter>
