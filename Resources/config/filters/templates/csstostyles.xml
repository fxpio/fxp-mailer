<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.filter.template.csstostyles.class">Sonatra\Bundle\MailerBundle\Filter\Template\CssToStylesFilter</parameter>
        <parameter key="sonatra_mailer.filter.template.csstostyles.cleanup">false</parameter>
        <parameter key="sonatra_mailer.filter.template.csstostyles.use_inline_styles_block">true</parameter>
        <parameter key="sonatra_mailer.filter.template.csstostyles.strip_original_style_tags">false</parameter>
        <parameter key="sonatra_mailer.filter.template.csstostyles.exclude_media_queries">false</parameter>
    </parameters>

    <services>
        <service id="sonatra_mailer.filter.template.csstostyles" class="%sonatra_mailer.filter.template.csstostyles.class%">
            <tag name="sonatra_mailer.template_filter" />
            <call method="setCleanup">
                <argument>%sonatra_mailer.filter.template.csstostyles.cleanup%</argument>
            </call>
            <call method="setUseInlineStylesBlock">
                <argument>%sonatra_mailer.filter.template.csstostyles.use_inline_styles_block%</argument>
            </call>
            <call method="setStripOriginalStyleTags">
                <argument>%sonatra_mailer.filter.template.csstostyles.strip_original_style_tags%</argument>
            </call>
            <call method="setExcludeMediaQueries">
                <argument>%sonatra_mailer.filter.template.csstostyles.exclude_media_queries%</argument>
            </call>
        </service>
    </services>
</container>
