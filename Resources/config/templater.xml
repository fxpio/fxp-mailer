<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_mailer.loader.layout_yaml.class">Sonatra\Bundle\MailerBundle\Loader\YamlLayoutLoader</parameter>
        <parameter key="sonatra_mailer.loader.mail_yaml.class">Sonatra\Bundle\MailerBundle\Loader\YamlMailLoader</parameter>
        <parameter key="sonatra_mailer.loader.layout_chain.class">Sonatra\Bundle\MailerBundle\Loader\LayoutLoaderChain</parameter>
        <parameter key="sonatra_mailer.loader.mail_chain.class">Sonatra\Bundle\MailerBundle\Loader\MailLoaderChain</parameter>
        <parameter key="sonatra_mailer.mail_templater.class">Sonatra\Bundle\MailerBundle\Mailer\MailTemplater</parameter>
    </parameters>

    <services>
        <!-- File Loaders -->
        <service id="sonatra_mailer.loader.layout_yaml" class="%sonatra_mailer.loader.layout_yaml.class%">
            <tag name="sonatra_mailer.layout_loader" priority="-50" />
            <argument type="collection" />
            <argument type="service" id="kernel" />
        </service>

        <service id="sonatra_mailer.loader.mail_yaml" class="%sonatra_mailer.loader.mail_yaml.class%">
            <tag name="sonatra_mailer.mail_loader" priority="-50" />
            <argument type="collection" />
            <argument type="service" id="sonatra_mailer.loader.layout_chain" />
            <argument type="service" id="kernel" />
        </service>

        <!-- Chain Loaders -->
        <service id="sonatra_mailer.loader.layout_chain" class="%sonatra_mailer.loader.layout_chain.class%">
            <argument type="collection" />
        </service>

        <service id="sonatra_mailer.loader.mail_chain" class="%sonatra_mailer.loader.mail_chain.class%">
            <argument type="collection" />
        </service>

        <!-- Templater -->
        <service id="sonatra_mailer.mail_templater" class="%sonatra_mailer.mail_templater.class%">
            <argument type="service" id="sonatra_mailer.loader.mail_chain" />
            <argument type="service" id="twig" />
            <call method="setTranslator">
                <argument type="service" id="translator" on-invalid="ignore" />
            </call>
        </service>
    </services>
</container>
