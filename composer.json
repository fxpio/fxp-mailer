{
    "name": "sonatra/mailer",
    "type": "library",
    "description": "A manager of HTML mail template stored in multiple systems and sent with different transports",
    "keywords": ["email", "template", "html", "mail", "manager", "switmailer", "doctrine", "twig"],
    "homepage": "https://github.com/sonatra/sonatra-mailer",
    "license": "MIT",
    "authors": [
        {
            "name": "FranÃ§ois Pluchino",
            "email": "francois.pluchino@sonatra.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "symfony/dependency-injection": "^3.0.0",
        "symfony/event-dispatcher": "^3.0.0",
        "symfony/http-kernel": "^3.0.0",
        "symfony/translation": "^3.0.0",
        "doctrine/common": "^2.6.0",
        "twig/twig": "^2.0.0"

    },
    "require-dev": {
        "symfony/yaml": "^3.0.0",
        "symfony/filesystem": "^3.0.0",
        "symfony/config": "^3.0.0",
        "doctrine/orm": "^2.5.0",
        "swiftmailer/swiftmailer": "^5.4.0",
        "tijsverkoyen/css-to-inline-styles": "^2.0.0"

    },
    "autoload": {
        "psr-4": { "Sonatra\\Component\\Mailer\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
