{
    "name": "sonatra/mailer-bundle",
    "type": "symfony-bundle",
    "description": "A manager of HTML mail template stored in multiple systems and sent with different transports",
    "keywords": ["email", "template", "html", "mail", "manager", "switmailer", "doctrine", "twig", "bundle"],
    "homepage": "https://github.com/sonatra/SonatraMailerBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "FranÃ§ois Pluchino",
            "email": "francois.pluchino@sonatra.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "symfony/framework-bundle": "~3.0",
        "twig/twig": "~1.23"

    },
    "require-dev": {
        "symfony/yaml": "~3.0",
        "doctrine/doctrine-bundle": "~1.6",
        "doctrine/orm": "~2.5",
        "swiftmailer/swiftmailer": "~5.4",
        "tijsverkoyen/css-to-inline-styles": "~2.0"

    },
    "autoload": {
        "psr-4": { "Sonatra\\Bundle\\MailerBundle\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
