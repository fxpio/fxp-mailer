{
    "name": "fxp/mailer",
    "type": "library",
    "description": "A manager of HTML mail template stored in multiple systems and sent with different transports",
    "keywords": ["email", "template", "html", "mail", "manager", "switmailer", "doctrine", "twig"],
    "homepage": "https://github.com/fxpio/fxp-mailer",
